<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id%>" method="PUT">
        <div class="field">
            <label>Title</label>
            <input type="text" value="<%= blog.title %>" name="blog[title]">
        </div>
        <div class="field">
            <label>Image</label>
        <input type="text" value="<%= blog.image %>" name="blog[image]">
        </div>
        <div class="field">
            <label>Blog Content</label>
        <textarea name="blog[body]" placeholder="body"><%= blog.body %></textarea>
        </div>
        <button  class="ui inverted blue button">Submit</button>
    </form>
</div>

<% include ./partials/footer %>
